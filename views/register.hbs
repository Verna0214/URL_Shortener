<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3" style="letter-spacing: 2px;">Register</h1>
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}" style="background-color: #F5F5F5;">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}" style="background-color: #F5F5F5;">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{password}}" style="background-color: #F5F5F5;">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" value="{{confirmPassword}}" style="background-color: #F5F5F5;">
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="border-radius: 10px;">Register</button>
      </form>
      <p class="mt-4" style="letter-spacing: 1px;">
        Have An Account? <a href="/users/login" style="text-decoration: none;">Login</a>
      </p>
    </div>
  </div>
</div>